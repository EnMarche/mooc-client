{{#link-to 'mooc.chapter' chapter.slug class="chapter-item"}}
  <div class="chapter-thumb"></div>
  <div class="chapter-body">
    <div class="chapter-title">
      {{chapter.title}}
    </div>

    {{#if chapter.duration}}
    <div class="chapter-duration">
      {{fa-icon 'clock-o'}}
      {{chapter.duration}}
    </div>
    {{/if}}
  </div>
{{/link-to}}
