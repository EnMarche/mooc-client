{{#link-to route chapter.slug class=(concat "chapter-item chapter-item--" chapter.type)}}
  <div class="chapter-item__thumb">
    {{#if (eq chapter.type "mooc")}}
      {{#if chapter.articleImage}}
        <img src={{chapter.articleImage}} alt="image" />
      {{else if parsedYtThumb}}
        <div class="chapter-item__yt-thumb" style={{parsedYtThumb}}></div>
      {{/if}}
    {{else if (eq chapter.type "video")}}
      <div class="chapter-item__yt-thumb" style={{parsedYtThumb}}></div>
    {{else if (eq chapter.type "image")}}
      <img src={{chapter.image}} alt="image" />
    {{else if (eq chapter.type "quiz")}}
      <div class="chapter-item__quiz-thumb">
        {{fa-icon 'check'}}
      </div>
    {{/if}}
  </div>
  <div class="chapter-item__body">
    <div class="chapter-item__title">
      {{chapter.title}}
    </div>

    {{#if chapter.duration}}
    <div class="chapter-item__duration">
      {{fa-icon 'clock-o'}}
      {{parsedDuration}}
    </div>
    {{/if}}
  </div>
{{/link-to}}
