<title>{{model.title}}</title>

<link rel="canonical" href={{model.url}} />
<meta name="description" content={{model.description}} />

<meta property="og:site_name" content="La République En Marche !" />
<meta property="og:url" content={{model.url}} />
<meta property="og:title" content={{model.chapterTitle}} />
<meta property="og:description" content={{model.description}} />
{{#if model.image}}
  <meta property="og:image" content={{model.image}} />
  <meta property="og:image:width" content="1600" />
  <meta property="og:image:height" content="840" />
{{/if}}
<meta property="fb:pages" content="543099962534877" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={{model.chapterTitle}} />
<meta name="twitter:description" content={{model.description}} />
{{#if model.image}}
<meta name="twitter:image" content={{model.image}} />
{{/if}}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Course",
    "name": "{{model.title}}",
    "description": "{{model.description}}",
    "provider": {
      "@type": "Organization",
      "name": "La République En Marche !",
      "sameAs": "https://en-marche.fr"
    }
  }
</script>
