{{#burger-menu
  class="mooc-slider"
  open=(media 'isOpenMenu')
  translucentOverlay=false
  locked=(media 'isOpenMenu')
  animation=(if (media 'isOpenMenu') 'squeeze' 'slide')
  width=(if (media 'isOpenMenu') size 320)
  as |burger|}}

  {{!-- "bm-menu" class prevents the menu buttton from firing two toggle events when it's open --}}
  {{site-header
    class="bm-menu"
    toggleMenu=(action burger.state.actions.toggle)}}

  {{#burger.menu as |menu|}}
    <section class="mooc-header">
      {{chapter-item model route='mooc.index'}}
    </section>
    {{#each model.weeks as |week|}}
      <section class="mooc-weeks">
        {{week-header week}}

        {{#chapter-list week.chapters as |item|}}
          {{#menu.item dismissOnClick=true}}
            {{item}}
          {{/menu.item}}
        {{/chapter-list}}
      </section>
    {{/each}}
  {{/burger.menu}}

  {{#burger.outlet}}
  <div class="page-wrapper">
    {{outlet}}

    {{site-footer}}
  </div>
  {{/burger.outlet}}

{{/burger-menu}}
